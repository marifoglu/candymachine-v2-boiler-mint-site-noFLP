<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="textSizeH1">32sp</dimen>
    <dimen name="textSizeH2">20sp</dimen>
    <dimen name="textSizeH3">16sp</dimen>
    <dimen name="textSizeH4">13sp</dimen>


    <style name="h1Black">
        <item name="android:fontFamily">@font/lexend_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSizeH1</item>
    </style>

    <style name="h1White">
        <item name="android:fontFamily">@font/lexend_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSizeH1</item>
    </style>

    <style name="h2">
        <item name="android:fontFamily">@font/lexend_light</item>
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">@dimen/textSizeH2</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/lexend_thin</item>
        <item name="android:textColor">@color/g_black</item>
        <item name="android:textSize">@dimen/textSizeH3</item>
    </style>

    <style name="h4Gray">
        <item name="android:fontFamily">@font/lexend_light</item>
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">@dimen/textSizeH4</item>
    </style>

    <style name="h4Black">
        <item name="android:fontFamily">@font/lexend_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSizeH4</item>
    </style>


    <style name="fontMedium">
        <item name="android:fontFamily">@font/lexend_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSizeH3</item>
    </style>

    <style name="buttonStyleGreen">
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="background">@drawable/button_rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSizeH2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="buttonStyleWhite">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSizeH2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lexend_thin</item>
    </style>

    <style name="backgroundLanding">
        <item name="android:background">@drawable/plant_green_background</item>
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>